# description
fast configurable prompt written in rust

# install
$ brew install starship
$ cargo install starship

# config
$ starship config # view

# presets -- https://starship.rs/presets/#bracketed-segments
$ starship preset gruvbox-rainbow -o ~/.config/starship.toml
$ starship preset bracketed-segments -o ~/.config/starship.toml

# dori
options:
bracketed-segments,
nerd-font-symbols,
no-empty-icons,
no-nerd-font,
no-runtime-versions,
pastel-powerline,
plain-text-symbols,
pure-preset,
tokyo-night

# presets
$ starship preset tokyo-night -o ~/.config/starship.toml

# use
$ starship_init

# quit / exit
$ starship_clean

# env
???

# directory truncation
[directory]
style = "fg:#58A6FF"
format = "[ $path ]($style)"
truncation_length = 3
truncation_symbol = "â€¦/"

# uninstall
sh -c 'rm "$(command -v 'starship')"' # Locate and delete the starship binary
